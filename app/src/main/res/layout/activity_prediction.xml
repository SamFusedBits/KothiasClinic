<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/ivory_white"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/back_arrow"
        android:layout_width="@dimen/_34sdp"
        android:layout_height="@dimen/_52sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_16sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_arrow" />

    <ImageView
        android:id="@+id/prediction_logo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_136sdp"
        android:layout_marginTop="@dimen/_88sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back_arrow"
        app:srcCompat="@drawable/prediction_logo" />

    <TextView
        android:id="@+id/prediction_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_60sdp"
        android:text="Prediction"
        android:textColor="@color/green"
        android:textSize="@dimen/_17sdp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/prediction_logo" />

    <TextView
        android:id="@+id/prediction_ready_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your prediction is ready. Check it out now!"
        android:textSize="@dimen/_15sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/prediction_heading" />

    <Button
        android:id="@+id/view_prediction"
        android:layout_width="@dimen/_277sdp"
        android:layout_height="@dimen/_49sdp"
        android:layout_marginTop="@dimen/_18sdp"
        android:background="@drawable/button_bg_layout_green"
        android:text="View Prediction"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/ivory_white"
        android:textSize="@dimen/_16sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/prediction_ready_message" />
</androidx.constraintlayout.widget.ConstraintLayout>