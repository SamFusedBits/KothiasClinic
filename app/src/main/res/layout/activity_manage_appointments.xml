<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ivory_white">

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_toolbar_dr"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_16sdp">

            <!-- Manage Time Slots Title -->
            <TextView
                android:id="@+id/tvManageTimeSlots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/green"
                android:text="Manage Time Slots"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold"
                android:padding="@dimen/_8sdp" />

            <!-- Date TextViews Container -->
            <LinearLayout
                android:id="@+id/layout_schedule_dates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:gravity="center"
                android:paddingBottom="@dimen/_8sdp" />

            <LinearLayout
                android:id="@+id/layout_time_slots"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center" >

                <CheckBox
                    android:id="@+id/checkBoxSlot1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 AM - 12 PM" />

                <CheckBox
                    android:id="@+id/checkBoxSlot2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4 PM - 6 PM" />

                <CheckBox
                    android:id="@+id/checkBoxSlot3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6 PM - 7 PM" />

            </LinearLayout>

            <!-- Add Time Slot Button -->
            <Button
                android:id="@+id/btnAddSlot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Time Slot"
                android:background="@color/light_green"
                android:textColor="@color/ivory_white"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_16sdp"
                android:onClick="addTimeSlot" />

            <!-- Remove Selected Slot Button (Initially Hidden) -->
            <Button
                android:id="@+id/btnRemoveSlot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remove Selected Slot"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_16sdp"
                android:visibility="gone" />

            <!-- Time Slots Title -->
            <TextView
                android:id="@+id/tvTimeSlotsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time Slots"
                android:textColor="@color/green"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold"
                android:padding="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_16sdp" />

            <!-- Progress Bar for Time Slots -->
            <ProgressBar
                android:id="@+id/progressBarTimeSlots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"/>

            <!-- RecyclerView for Time Slots -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvTimeSlots"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_8sdp"
                android:visibility="visible" />

<!--            <TextView
                android:id="@+id/tvTimeSlot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />-->

            <!-- Empty State TextView for Time Slots -->
            <TextView
                android:id="@+id/tvTimeSlotsEmpty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No time slots available."
                android:textColor="@color/green"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_16sdp" />

            <!-- Today's Appointments Title -->
            <TextView
                android:id="@+id/tvTodayAppointments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today's Appointments"
                android:textColor="@color/green"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold"
                android:padding="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_16sdp" />

            <!-- Progress Bar for Today's Appointments -->
            <ProgressBar
                android:id="@+id/progressBarTodayAppointments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"/>

            <!-- RecyclerView for Today's Appointments -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvTodayAppointments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_8sdp"
                android:visibility="visible" />

            <!-- Empty State TextView for Today's Appointments -->
            <TextView
                android:id="@+id/tvTodayAppointmentsEmpty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No appointments for today."
                android:textColor="@color/green"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_16sdp" />

            <!-- Future Appointments Title -->
            <TextView
                android:id="@+id/tvFutureAppointments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Future Appointments"
                android:textColor="@color/green"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold"
                android:padding="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_16sdp" />

            <!-- Progress Bar for Future Appointments -->
            <ProgressBar
                android:id="@+id/progressBarFutureAppointments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"/>

            <!-- RecyclerView for Future Appointments -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvFutureAppointments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_8sdp"
                android:visibility="visible" />

            <!-- Empty State TextView for Future Appointments -->
            <TextView
                android:id="@+id/tvFutureAppointmentsEmpty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No future appointments."
                android:textColor="@color/green"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_16sdp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Toolbar -->
    <include
        android:id="@+id/bottom_toolbar_dr"
        layout="@layout/bottom_toolbar_dr"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
